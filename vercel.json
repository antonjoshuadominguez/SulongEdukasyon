{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/dist"
        }
      },
      {
        "src": "server/api/*.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "server/**",
            "shared/**",
            "env/**",
            "drizzle.config.ts"
          ]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "client/dist/$1",
        "headers": {
          "Cache-Control": "s-maxage=31536000, stale-while-revalidate"
        }
      }
    ]
  }