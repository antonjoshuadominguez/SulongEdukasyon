{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/api/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**"]
      }
    }
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "server/api/$1"},
    {"src": "/(.*)", "dest": "dist/$1"}
  ]
}